{% extends '@Blog/bootstrap.layout.html.twig' %}

{% block title %}Публикации автора "{{ author.name }}"{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        .post-block {
            margin-bottom: 10px;
            border: 1px solid;
        }

        .post-block .add-date {
            font-size: 12px;
            color: gray;
        }

        .post-block .post-title {
            font-size: 18px;
        }

        .post-block .post-teaser {
            padding: 0 10px 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row posts-list">
            {% if posts|length %}
                {% for post in posts %}
                    <div class="col-lg-12 post-block">
                        <span class="add-date">{{ post.addDate|date('H:i:s d-m-Y') }}</span>
                        <p class="post-title">{{ post.title }}</p>
                        <div class="post-teaser">
                            {{ post.teaser }}
                        </div>
                        <p><a href="{{ path('blog.posts.view', {'post' : post.id}) }}">Читать</a></p>
                    </div>
                    {% if post.isPublished %}
                        <a href=""></a>
                    {% endif %}
                {% endfor %}
            {% else %}
                У этого автора пока нет публикаций
            {% endif %}
        </div>

        {% include '@Blog/layer/pagination.html.twig' %}
    </div>

{% endblock %}
