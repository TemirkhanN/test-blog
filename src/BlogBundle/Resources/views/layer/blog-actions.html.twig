{% block stylesheet %}
    <style>
        .static-bar {
            position: fixed;
            left: 5px;
            top: 10px;
        }

        .alert-danger {
            width: 90%;
            margin: auto;
        }

        .static-bar a.btn {
            margin-bottom: 2px;
        }
    </style>
{% endblock %}

{% set user = app.user %}

<div class="static-bar">
    <a href="{{ path('blog.posts') }}" class="btn btn-primary" title="На главную">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    </a>
    <br>
    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
        <a href="{{ path('blog.posts.create') }}" class="btn btn-success" title="Написать публикацию">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <br>
        <a href="{{ path('blog.posts.author.view', {'author' : user.id }) }}" class="btn btn-info"
           title="Список моих публикаций">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
        </a>
        <br>
        <a href="/logout" class="btn btn-warning" title="Выход">
            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a>
    {% else %}
        <a href="{{ path('blog.login') }}" class="btn btn-success" title="Вход">
            <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
        </a>
        <br>
        <a href="{{ path('blog.register') }}" class="btn btn-info" title="Регистрация">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </a>
    {% endif %}
</div>
